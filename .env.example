# ============================================
# Synergy Client Portal - Environment Variables
# ============================================

# Copy this file to .env.local and fill in your values

# ============ Database ============
DATABASE_URL=postgresql://user:password@localhost:5432/synergy_dev

# ============ Next.js / Auth ============
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-random-secret-key-here-min-32-chars
JWT_SECRET=your-jwt-secret-key-here-min-32-chars
SESSION_ENCRYPTION_KEY=your-session-encryption-key-here-min-32-chars

# ============ Stripe ============
NEXT_PUBLIC_STRIPE_KEY=pk_test_YOUR_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_test_YOUR_WEBHOOK_SECRET

# ============ Email (Optional - for password resets, notifications) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@synergy.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@synergy.com

# ============ Application ============
NODE_ENV=development
LOG_LEVEL=debug

# ============ Feature Flags ============
ENABLE_2FA=false
ENABLE_AUDIT_LOGGING=true
ENABLE_EMAIL_VERIFICATION=false

# ============ Trial Configuration ============
TRIAL_DAYS=14
MAX_TRIAL_EXTENSIONS=1

# ============ Payment Configuration ============
CURRENCY=USD
PAYMENT_RETRY_MAX_ATTEMPTS=3
PAYMENT_RETRY_INTERVAL_HOURS=24

# ============ Rate Limiting ============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5
